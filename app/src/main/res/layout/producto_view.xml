<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/producto_img"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/caramelfrap"/>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/degradado"
            android:gravity="start"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="textStart"
            android:text="Caramel Frap"/>

        <TextView
            android:id="@+id/producto_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Aquí va la descripción"/>

    </LinearLayout>

    <TextView
        android:id="@+id/producto_precio"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:gravity="center"
        android:textSize="30dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_height="match_parent"
        android:text="$5"
        android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>